<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheet/style.css" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>
  <body>
    <div class="min-h-screen bg-zinc-900 text-white">
      <div class="nav mb-3 p-3">
        <a class="text-blue-500 font-semobold" href="/"
          >Back to the Home page</a
        >
      </div>
      <h1 class="px-3 py-3 underline text-2xl font-mono">All user</h1>
      <div class="users flex flex-wrap gap-4 px-3">
  <% if (users.length > 0) { %>
  <% users.forEach((e) => { %>
    <div class="user w-72 rounded-lg p-4 bg-zinc-800">
      <div class="h-52 bg-zinc-500 rounded-lg">
        <img class="w-full h-full object-cover rounded-lg" src="<%= e.image %>" alt="">
      </div>

      <h3 class="text-xl font-bold text-white"><%= e.name %></h3>
      <h4 class="text-xl font-bold text-gray-500"><%= e.email %></h4>

      <div class="flex gap-7">
        <a class="text-blue-600" href="#">Edit!</a>
        <a class="text-red-600" href="/delete/<%= e._id %>">Delete</a>
      </div>
    </div>
  <% }) %>
<% } else { %>
  <h3 class="text-red-500 font-6xl text-center py-6 uppercase underline">
    No Users yet!!
  </h3>
<% } %>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
